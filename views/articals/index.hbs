<h1>Service</h1>
<div class="row">
    {{#each articals}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id }}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/articals/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/articals/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>



    {{else}}
        <p>No service avvaible for unuthorized user</p>
    
    {{/each}}
</div>