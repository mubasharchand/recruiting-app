<div class="row">
    <div class="col s12 m8">
        <h3>{{artical.title}}
            <small>{{{editIcon artical.user user artical._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{artical.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{artical.user.displayName}}</span>
                <img src="{{artical.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/articals/user/{{artical.user._id}}">More From {{artical.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
